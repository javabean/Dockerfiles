export LC_ALL=C
export DEBIAN_FRONTEND=noninteractive
minimal_apt_get_install='apt-get install -y --no-install-recommends --no-install-suggests'

# Default services
# Set 1 to the service you want to disable
export DISABLE_SYSLOG=${DISABLE_SYSLOG:-0}
export DISABLE_SSH=${DISABLE_SSH:-1}
export DISABLE_CRON=${DISABLE_CRON:-0}
export DISABLE_CONSUL=${DISABLE_CONSUL:-0}

#export GOSU_VERSION=${GOSU_VERSION:-1.10}
export TINI_VERSION=${TINI_VERSION:-v0.10.0}
export DUMB_INIT_VERSION=${DUMB_INIT_VERSION:-1.2.0}
#export CONTAINERPILOT_VERSION=${CONTAINERPILOT_VERSION:-2.4.3}
export CONSUL_VERSION=${CONSUL_VERSION:-0.7.0}
export CONSUL_TEMPLATE_VERSION=${CONSUL_TEMPLATE_VERSION:-0.16.0}
